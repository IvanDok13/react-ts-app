{
  "name": "api-application",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "homepage": "https://github.com/IvanDok13/react-ts-app/",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "npx eslint",
    "lint:fix": "npx eslint --fix",
    "prettier": "npx prettier ./src --check",
    "format:fix": "npx prettier ./src --write",
    "stylelint": "npx stylelint ./src",
    "stylelint:fix": "npx stylelint ./src --fix",
    "format": "npm run format:fix && npm run stylelint:fix && npm run lint:fix",
    "prepare": "husky install .husky",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist"
  },
  "lint-staged": {
    "**.*": "npm run prettier:fix",
    "*.{css}": "npm run stylelint:fix",
    "*.{ts,js}": "npm run lint:fix"
  },
  "validate-branch-name": {
    "pattern": "^(feat|fix|chore|refactor)/RSS-PZ-(0\\d|\\d+)_\\w+",
    "errorMsg": "Branch name doesn't follow the defined repository rules"
  },
  "devDependencies": {
    "@eslint/config-array": "^0.20.0",
    "@eslint/object-schema": "^2.1.6",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^15.0.5",
    "@types/dotenv": "^6.1.1",
    "@types/lodash": "^4.17.0",
    "@types/node": "^22.15.3",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.0",
    "@types/react-modal": "^3.16.3",
    "@types/react-slider": "^1.3.6",
    "@types/react-tooltip": "^4.2.4",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "@vitest/coverage-v8": "^3.1.2",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-compiler": "^19.0.0-beta-af1b7da-20250417",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.6",
    "eslint-plugin-unicorn": "^47.0.0",
    "gh-pages": "^6.3.0",
    "husky": "^8.0.0",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.4.3",
    "prettier": "3.6.2",
    "stylelint": "^16.2.1",
    "stylelint-config-clean-order": "^5.4.1",
    "stylelint-order": "^6.0.4",
    "stylelint-prettier": "^5.0.0",
    "typescript": "^5.2.2",
    "validate-branch-name": "^1.3.0",
    "vite": "^6.3.4",
    "vite-plugin-checker": "^0.6.4",
    "vite-plugin-webfont-dl": "^3.9.4",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.2"
  },
  "dependencies": {
    "@types/react-image-gallery": "^1.2.4",
    "cross-fetch": "^4.1.0",
    "dotenv": "^16.5.0",
    "glob": "^9.3.5",
    "lru-cache": "^11.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.51.4",
    "react-icons": "^5.5.0",
    "react-image-gallery": "^1.3.0",
    "react-loader-spinner": "^6.1.6",
    "react-loading-skeleton": "^3.4.0",
    "react-modal": "^3.16.1",
    "react-responsive": "^10.0.0",
    "react-router-dom": "^6.23.0",
    "react-slider": "^2.0.6",
    "react-toastify": "^10.0.5",
    "rimraf": "^4.4.1",
    "stylelint-config-standard-scss": "^14.0.0",
    "toastify-js": "^1.12.0",
    "uuid": "^11.1.0"
  }
}
